<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <rosparam file="$(find robot_arm)/config/robot_arm.yaml"
            command="load"/>

  <node name="robot_state_publisher_gripper" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
            <param name="publish_frequency" type="double" value="30.0" />
            <param name="ignore_timestamp" type="bool" value="true" />
            <param name="tf_prefix" type="string" value="robot_arm" />
            <remap from="/joint_states" to="/robot_arm/joint_states" />
        </node>


  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="--namespace=/robot_arm
                              joint_state_controller
                              joint_1_position_controller
                              joint_2_position_controller
                              joint_3_position_controller
                              joint_4_position_controller
                              --shutdown-timeout 3">
  </node>

</launch>